<%- model_class = Photo -%>
<div class="page-header">
  <h1>Foto</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Arquivo:</strong></dt>
  <dd><%= image_tag(@photo.file_url, width: 700) %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Voltar",
              photos_path, :class => 'btn'  %>
  <%= link_to "Editar",
              edit_photo_path(@photo), :class => 'btn btn-primary' %>
  <%= link_to "Deletar",
              photo_path(@photo),
              :method => 'delete',
              :data => { :confirm => "Tem certeza?" },
              :class => 'btn btn-danger' %>
</div>
